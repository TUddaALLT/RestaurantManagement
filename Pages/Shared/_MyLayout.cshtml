
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantManagement.styles.css" asp-append-version="true" />
    <style>
        /* Add your CSS styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        h1 {
            font-size: 2em;
        }

        .header-buttons {
            display: flex;
            gap: 10px;
        }

            .header-buttons a {
                text-decoration: none;
                color: #fff;
                padding: 8px 12px;
                background-color: #007bff;
                border: none;
                border-radius: 4px;
            }

        .introduction {
            background-image: url('restaurant-image.jpg'); /* Add your image URL */
            background-size: cover;
            background-position: center;
            color: #fff;
            padding: 100px 0;
            text-align: center;
        }

            .introduction h2 {
                font-size: 2em;
                margin-bottom: 20px;
            }

        main {
            padding: 20px;
        }

        footer {
            margin:80vh 0 0 0;
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to Restaurant </h1>
        <div class="header-buttons">
            <a href="/order/table">Booking</a>
            <a href="/order/listorderdetail">My Booking</a>
            <a href="/authentication/login">Login</a>
            <a href="/authentication/mailconfirm">Register</a>
            <a href="/authentication/logout">Logout</a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <h3>Contact Us</h3>
        <p>123 Main Street, City, Country</p>
        <p>Email: info@restaurant.com</p>
        <p>Phone: +1-123-456-7890</p>
        <p>&copy; 2023 Restaurant Management</p>
    </footer>
     

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>