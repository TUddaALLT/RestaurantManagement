@page
@model RestaurantManagement.Pages.FoodManager.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div>
    <div class="menu">
        <div>
            <h2 class="menutext">ARE YOU SURE?</h2>
        </div>
    </div>
    <hr />   
    <div>
        <table class="table">
            <thead class="theadtable">
                <tr>
                    <th class="title">Name</th>
                    <th class="title">Description</th>
                    <th class="title">Price</th>
                    <th class="title">Category</th>
                    <th class="title">Settings</th>
                </tr>
            </thead>
            <tr>
                <td>@Html.DisplayFor(model => model.Food.Name)</td>

                <td>@Html.DisplayFor(model => model.Food.Description)</td>

                <td>@Html.DisplayFor(model => model.Food.Price)</td>

                <td>@Html.DisplayFor(model => model.Food.Category.Name)</td>
                <td class="btncrud">
                    <form method="post">
                        <input type="hidden" asp-for="Food.Id" />
                        <input type="submit" value="Delete" class="btndelete" />
                        <a asp-page="./Index">Back to List</a>
                    </form>
                </td>
            </tr>
        </table>
    </div>
</div>
<link href="~/css/buttoncustom.css" rel="stylesheet" />
