@page
@model RestaurantManagement.Pages.Order.IndexModel
@{
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
    }

    form {
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    h1 {
        font-size: 24px;
        margin-top: 0;
    }

    h3 {
        font-size: 20px;
        margin: 10px 0;
    }

    ul {
        list-style: none;
        padding: 0;
    }

    li {
        margin-bottom: 5px;
    }

    label {
        font-weight: bold;
    }

    input[type="checkbox"] {
        margin-right: 5px;
    }

    input[type="submit"] {
        background-color: #007BFF;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }

</style>

<form method="post">
    <div style="display: flex; justify-content: space-between">
        <div>
            <h1>Chọn món theo danh mục</h1>
            @foreach (var c in Model.foodCategories)
            {
                @if (c.Foods.Count() != 0)
                {
                    <h3>@c.Name</h3>
                }

                <ul>
                    @foreach (var f in c.Foods)
                    {
                        if (@c.Id == f.CategoryId)
                        {
                            <li>
                                <input type="checkbox" id="food-@f.Id" name="foodId[]" value="@f.Id">
                                <label for="food-@f.Id"> @f.Name</label>
                            </li>
                        }
                    }
                </ul>
            }
        </div>
        <div>
            <h1>Chọn món theo combo</h1>
            @foreach (var com in Model.combo)
            {
                @if (com.FoodCombos.Count() != 0)
                {
                    <li>
                        <input type="checkbox" id="combo-@com.Id" name="comboId[]" value="@com.Id">
                        <label for="combo-@com.Id">@com.Name</label>
                    </li>
                }

                <ul>
                    @foreach (var fb in Model.foodcombo)
                    {
                        if (@com.Id == fb.ComboId)
                        {
                            <li>@fb.Food.Name</li>
                        }
                    }
                </ul>
            }
        </div>
    </div>
    <input type="submit" value="Đặt món">
</form>
