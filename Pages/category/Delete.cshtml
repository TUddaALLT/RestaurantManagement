@page
@model RestaurantManagement.Pages.category.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h4>FoodCategory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FoodCategory.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FoodCategory.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodCategory.Description)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="FoodCategory.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" id="btnDelete" onclick="return confirmDelete()"/> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete this category?")) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}


