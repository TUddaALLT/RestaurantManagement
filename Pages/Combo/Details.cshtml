@page
@model RestaurantManagement.Pages.Combo.DetailsModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Combo</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Combo.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Combo.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Combo.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Combo.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Combo.Price)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Combo.Price)
		</dd>
	</dl>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Food[0].Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Food[0].Description)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Food[0].Price)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Food[0].Category)
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Food)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CategoryId)
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>
<div>
	<a asp-page="./Edit" asp-route-id="@Model.Combo?.Id">Edit</a> |
	<a asp-page="./Index">Back to List</a>
</div>
