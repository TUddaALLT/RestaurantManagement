@page
@model RestaurantManagement.Pages.Combo.EditModel
@using RestaurantManagement.Models;

@{
    ViewData["Title"] = "Edit";
}

<div>
    <div class="menu">
        <div>
            <h2 class="menutext">EDIT COMBO</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Combo.Id" />
                <div class="form-group">
                    <label asp-for="Combo.Name" class="control-label"></label>
                    <input asp-for="Combo.Name" class="form-control" />
                    <span asp-validation-for="Combo.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Combo.Description" class="control-label"></label>
                    <input asp-for="Combo.Description" class="form-control" />
                    <span asp-validation-for="Combo.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Combo.Price" class="control-label"></label>
                    <input asp-for="Combo.Price" class="form-control" />
                    <span asp-validation-for="Combo.Price" class="text-danger"></span>
                </div>
                <div class="btncrud">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn" />
                    </div>
                    <div>
                        <button type="button" class="btn" onclick="location.href='@Url.Page("Index")'">Back to List</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<link href="~/css/foodandcategory/edit.css" rel="stylesheet" />
<link href="~/css/buttoncustom.css" rel="stylesheet" />